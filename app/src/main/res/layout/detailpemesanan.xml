<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Pembayaran">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:text="Apakah pesananmu sudah benar ?"
            android:textColor="@color/hitam"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/gambar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/monkey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/produk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:text="Nama produk"
                    android:textColor="@color/hitam"
                    android:textSize="20dp"
                    />


                <TextView
                    android:id="@+id/harga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:text="Rp 500.000"
                    android:textColor="@color/hitam"
                    android:textSize="16dp"
                     />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="20dp"
            android:background="@color/hitamtrans" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jumlah Pembalian"
            android:textSize="18dp"
            android:textColor="@color/hitam"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            />

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/kurang"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/kurang"
                    android:layout_marginRight="10dp" />

                <TextView
                    android:id="@+id/jumlahbarang"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:background="@color/abu"
                    android:gravity="center"
                    android:inputType="number"
                    android:text="1"
                    android:textColor="@color/hitam"
                    android:textSize="16dp"
                    />



                    <Button
                        android:id="@+id/tambah"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/tambah"
                        android:layout_marginLeft="10dp" />


            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"

            android:background="@color/hitamtrans" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center|left"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Harga"
                android:textSize="12dp"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/totalharga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Harga"
                android:textSize="16dp"
                android:textColor="@color/hijau"
                android:layout_marginLeft="10dp"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/beli"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/btnutama"
                android:text="Beli Sekarang"
                android:textSize="15dp"
                android:textColor="@color/putih"
                android:textAllCaps="false"/>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>